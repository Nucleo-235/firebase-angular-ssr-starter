  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build:ssr": "ng build --prod --app 0 --output-hashing=false && ng build --prod --app 1 --output-hashing=false && mv dist/index.html functions/dist-server/index.html",
